<Window x:Class="GUI.Tasks"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:GUI"
        mc:Ignorable="d"
        Title="Tasks" Height="356.897" Width="358.5" Loaded="Window_Loaded_1">
    <Grid Margin="0,0,2,0">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="127*"/>
            <ColumnDefinition Width="38*"/>
        </Grid.ColumnDefinitions>
        <Label x:Name="currentTask" Content="Your tasks: " HorizontalAlignment="Left" Margin="129,38,0,0" VerticalAlignment="Top" Width="84"/>
        <ListBox x:Name="listBox" HorizontalAlignment="Left" Height="125" Margin="10,69,0,0" VerticalAlignment="Top" Width="328" Grid.ColumnSpan="2"/>
        <Button x:Name="Details" Content="Details/Edit" HorizontalAlignment="Left" Margin="22,199,0,0" VerticalAlignment="Top" Width="84" Click="Details_Click"/>
        <Button x:Name="CancelTask" Content="Cancel Task" HorizontalAlignment="Left" Margin="238,199,0,0" VerticalAlignment="Top" Width="84" Grid.ColumnSpan="2" Click="CancelTask_Click"/>
        <Button x:Name="Add" Content="Add New Task" HorizontalAlignment="Left" Margin="129,199,0,0" VerticalAlignment="Top" Width="84" Click="Add_Click"/>

    </Grid>
</Window>
